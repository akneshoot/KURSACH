<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Базовая тема приложения для темного режима -->
    <style name="Theme.HappyEnglish" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Основной цвет бренда для темного режима -->
        <item name="colorPrimary">@color/colorSurfaceDark</item>
        <item name="colorPrimaryVariant">@color/textColorSecondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Вторичный цвет бренда для темного режима -->
        <item name="colorSecondary">@color/colorSurfaceDark</item>
        <item name="colorSecondaryVariant">@color/colorSurfaceDark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Цвета фона и поверхности для темного режима -->
        <item name="android:colorBackground">@color/textColorSecondary</item>
        <item name="colorSurface">@color/textColorSecondary</item>
        <!-- Цвета текста для темного режима -->
        <item name="android:textColorPrimary">@color/textColorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryDark</item>
        <!-- Цвет строки состояния для темного режима -->
        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Тема без ActionBar для темного режима -->
    <style name="Base.Theme.HappyEnglish" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Настройка темной темы -->
    </style>
</resources>
