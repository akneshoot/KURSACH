<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GrammarTestActivity">

    <RelativeLayout
        android:id="@+id/top_relative_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#5CFCFDFD"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/middle_relative_layout"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintWidth_percent="1"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/level_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:text="level A1"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/test_description_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/level_textview"
            android:padding="10dp"
            android:text="Описание"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingLeft="10dp"
            android:text="Выберите правильный ответ"
            android:textColor="#000000"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/middle_relative_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/top_relative_layout"
        app:layout_constraintBottom_toTopOf="@+id/bottom_relative_layout"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintWidth_percent="1"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/question_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="1:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/question_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/question_counter"
            android:padding="10dp"
            android:text="Это первый номер нашего грамматического теста." />

        <RadioGroup
            android:id="@+id/option_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/question_text"
            android:layout_alignLeft="@id/question_text"
            android:padding="10dp">

            <RadioButton
                android:id="@+id/option_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="option_a" />

            <RadioButton
                android:id="@+id/option_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="option_b" />

            <RadioButton
                android:id="@+id/option_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="option_c" />

        </RadioGroup>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_relative_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#6AF7FAF9"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/middle_relative_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintWidth_percent="1"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/test_points_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Очки теста:" />

        <TextView
            android:id="@+id/current_test_average_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/test_points_textView"
            android:padding="5dp"
            android:text="Среднее:" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/current_test_average_textView"
            android:layout_centerHorizontal="true"
            android:text="Отправить" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
